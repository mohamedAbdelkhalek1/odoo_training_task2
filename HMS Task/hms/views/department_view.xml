<odoo>
    <data>

        <record id="department_tree_view" model="ir.ui.view">
            <field name="name">department tree view</field>
            <field name="model">hms.department</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="capacity"/>
                    <field name="is_opened"/>
                </tree>
            </field>
        </record>

        <record id="department_action" model="ir.actions.act_window">
            <field name="name">department action</field>
            <field name="res_model">hms.department</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="department_menu" name="Departments" parent="hms_menu_root" action="department_action"/>

    </data>
</odoo>